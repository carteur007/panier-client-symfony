{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block header %}
	{% include "header.html.twig" %}
{% endblock %}

{% block Content %}
    {% if products %}
        {% for product in products %}
            <div class="row">
                <div class="col s12 m4 l3">
                    <div class="card">
                    <div class="card-image">
                        <img class="image-responsive" src="{{ asset(product_images ~ product.imageName) }}">
                        <span class="card-title">{{ product.name }}</span>
                        <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                    </div>
                    <div class="card-content">
                        <p>{{ product.description }}</p>
                        <div class="info-prod">
                            <div class="price-rpp-pod">
                                <span class="price-prod"><b>$ </b>{{ product.price }}</span> <b class="sub">/0</b</span>
                                <span class="rpp-prod">{{ product.rpp}}</span>
                            </div>
                            <button type="button" class="btn-prod"> Ajouter</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <h2>Rien pour l'instant </h2>
    {% endif %}
    
{% endblock %}
{% block footer %}
	{% include "footer.html.twig" %}
{% endblock %}